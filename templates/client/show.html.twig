{% extends 'base.html.twig' %}

{% block title %}Client{% endblock %}

{% block body %}
    <h1>Client</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ client.id }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ client.LastName }}</td>
            </tr>
            <tr>
                <th>Addres</th>
                <td>{{ client.Addres }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ client.Phone }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ client.FirstName }}</td>
            </tr>
            <tr>
                <th>DateBirth</th>
                <td>{{ client.DateBirth ? client.DateBirth|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>ValideEmail</th>
                <td>{{ client.ValideEmail }}</td>
            </tr>
            <tr>
                <th>Enable</th>
                <td>{{ client.Enable ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_client_index') }}">back to list</a>

    <a href="{{ path('app_client_edit', {'id': client.id}) }}">edit</a>

    {{ include('client/_delete_form.html.twig') }}
{% endblock %}
