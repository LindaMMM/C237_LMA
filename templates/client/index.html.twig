{% extends 'base.html.twig' %}

{% block title %}Client index{% endblock %}

{% block body %}
    <h1>Client index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>LastName</th>
                <th>Addres</th>
                <th>Phone</th>
                <th>FirstName</th>
                <th>DateBirth</th>
                <th>ValideEmail</th>
                <th>Enable</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                <td>{{ client.id }}</td>
                <td>{{ client.LastName }}</td>
                <td>{{ client.Addres }}</td>
                <td>{{ client.Phone }}</td>
                <td>{{ client.FirstName }}</td>
                <td>{{ client.DateBirth ? client.DateBirth|date('Y-m-d') : '' }}</td>
                <td>{{ client.ValideEmail }}</td>
                <td>{{ client.Enable ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_client_show', {'id': client.id}) }}">show</a>
                    <a href="{{ path('app_client_edit', {'id': client.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_client_new') }}">Create new</a>
{% endblock %}
