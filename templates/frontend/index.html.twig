{# templates/frontend/index.html.twig #}
{% extends 'base.html.twig' %}

{% set title = "Accueil" %}



{% block content %}


<section class="bg-gray-50">
  <header>
    <p>Bienvenue {{client.firstname}} sur notre site !</p>
  </header>


  <div>

  </div>
  {% set _currentRoute = app.request.attributes.get('_route') %}
  {% set _currentParams = app.request.query.all|merge(app.request.attributes.get('_route_params')) %}

  
  <div class="relative items-center w-full px-5 py-12 mx-auto max-w-7xl">
    <div class="grid grid-cols-3 gap-3">
      {% for movie in movies %}
      <div class="p-6">
        <img class="object-cover object-center w-full mb-8 lg:h-30 md:h-36 rounded-xl" src="{{ movie.medias.count > 0 ? movie.medias[0].path: asset('images/not_available.png') }}" alt="blog">

        <h1 class="mx-auto mb-8 text-2xl font-semibold leading-none tracking-tighter text-neutral-600 lg:text-3xl">
          {{ movie.name }}
        </h1>
        <p class="mx-auto text-base leading-relaxed text-gray-500">
          {{ movie.Summary }}
        </p>
        <div class="mt-4">
          <a href="{{path('app_show_movie', {id: movie.id})}}" class="inline-flex items-center mt-4 font-semibold text-blue-600 lg:mb-0 hover:text-neutral-600" title="read more"> Affichage Â» </a>
        </div>
      </div>
      {% endfor %}
    </div>
    {% if maxpage > 1 %}
  <nav>
    <ul class="inline-flex items-center rounded-md shadow-sm">
      {% if page > 1 %}
      <li class="text-slate-800 hover:text-blue-600 text-sm bg-white hover:bg-slate-100 border border-slate-200 rounded-l-lg font-medium px-4 py-2 inline-flex space-x-1 items-center">
        <a class="page-link" href="{{ path(_currentRoute, _currentParams|merge({page: page - 1})) }}" aria-label="Previous">
          &laquo; Previous
        </a>
      </li>
      {% endif %}
      {% if page != maxpage %}
      <li class="text-slate-800 hover:text-blue-600 text-sm bg-white hover:bg-slate-100 border border-slate-200 rounded-l-lg font-medium px-4 py-2 inline-flex space-x-1 items-center">
        <a class="page-link" href="{{ path(_currentRoute, _currentParams|merge({page: page + 1})) }}" aria-label="Next">
          Next &raquo;
        </a>
      </li>
      {% endif %}
    </ul>
  </nav>
  {% endif %}
  </div>

</section>





{% endblock %}