{% extends 'base-backend.html.twig' %}

{% set title = "Clients" %}

{% block content %}
    <a href="{{ path('app_client_new') }}">Create new</a>
    <table class="table">
        <thead>
            <tr>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Actif</th>
                <th>action</th>
            </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                <td>{{ client.firstName }}</td>
                <td>{{ client.lastName }}</td>
                <td>{{ client.Enable ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_client_show', {'id': client.id}) }}">show</a>
                    <a href="{{ path('app_client_edit', {'id': client.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">Aucune client trouver found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
