{% extends 'base-backend.html.twig' %}

{% set title ='Client' %}

{% block content %}
    <h1>Client</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ client.id }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ client.lastName }}</td>
            </tr>
            <tr>
                <th>Addres</th>
                <td>{{ client.addres }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ client.phone }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ client.firstName }}</td>
            </tr>
            <tr>
                <th>DateBirth</th>
                <td>{{ client.dateBirth ? client.dateBirth|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>valideEmail</th>
                <td>{{ client.valideEmail }}</td>
            </tr>
            <tr>
                <th>Enable</th>
                <td>{{ client.enable ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_client_index') }}">back to list</a>

    <a href="{{ path('app_client_edit', {'id': client.id}) }}">edit</a>

    {{ include('backend/client/_delete_form.html.twig') }}
{% endblock %}
