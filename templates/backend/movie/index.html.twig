{% extends 'base-backend.html.twig' %}

{% set title = 'Liste des films' %}

{% block content %}
<div class="m-5 p-2 gap-5 grid content-start hover:content-around text-center ">
     <a class="btn btn-blue p-5" href="{{ path('app_movie_new') }}">Cr√©ation d'un film</a>
     </div>
    <table class="min-w-full text-left text-sm font-light text-surface dark:text-white">
        <thead class="border-b border-neutral-200 font-medium dark:border-white/10">
            <tr>
                <th scope="col" class="px-6 py-4">Id</th>
                <th scope="col" class="px-6 py-4" >Name</th>
                <th scope="col" class="px-6 py-4">DateSortie</th>
                <th scope="col" class="px-6 py-4">Enable</th>
                <th scope="col" class="px-6 py-4" >actions</th>
            </tr>
        </thead>
        <tbody>
        {% for movie in movies %}
            <tr>
                <td class="whitespace-nowrap px-6 py-4">{{ movie.id }}</td>
                <td class="whitespace-nowrap px-6 py-4" >{{ movie.name }}</td>
                <td class="whitespace-nowrap px-6 py-4">{{ movie.dateSortie ? movie.dateSortie|date('Y-m-d') : '' }}</td>
                <td class="whitespace-nowrap px-6 py-4">{{ movie.enable ? 'Yes' : 'No' }}</td>
                <td class="whitespace-nowrap px-6 py-4">
                    <a class="btn btn-red" href="{{ path('app_movie_show', {'id': movie.id}) }}">Visualiser</a>
                    <a class="btn btn-blue" href="{{ path('app_movie_edit', {'id': movie.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                 <td colspan="6">Aucun enregistrement</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

   
{% endblock %}
