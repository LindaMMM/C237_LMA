{% set title = 'Film' %}

{% block content %}
    
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ movie.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ movie.name }}</td>
            </tr>
            <tr>
