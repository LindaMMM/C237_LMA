{% extends 'backend/indextypes.html.twig' %}

{% set title = 'Liste des genres' %}

{% block type %}
   <div class="m-5 p-2 gap-5 grid content-start hover:content-around text-center ">
     <a class="btn btn-blue p-5" href="{{ path('app_genre_new') }}">Cr√©ation d'un genre</a>
     </div>

    <table class="min-w-full text-left text-sm font-light text-surface dark:text-white">
        <thead class="border-b border-neutral-200 font-medium dark:border-white/10">
            <tr>
                <th scope="col" class="px-6 py-4" >Id</th>
                <th scope="col" class="px-6 py-4" >Nom</th>
                <th scope="col" class="px-6 py-4">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for genre in genres %}
            <tr>
                <td class="whitespace-nowrap px-6 py-4">{{ genre.id }}</td>
                <td class="whitespace-nowrap px-6 py-4">{{ genre.Name }}</td>
                <td class="whitespace-nowrap px-6 py-4">
                    <a class="btn btn-red" href="{{ path('app_genre_show', {'id': genre.id}) }}">Visualiser</a>
                    <a class="btn btn-blue" href="{{ path('app_genre_edit', {'id': genre.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun enregistrement</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
