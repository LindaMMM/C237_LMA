{% extends 'base-backend.html.twig' %}

{% set title = 'Command' %}

{% block content %}
    <h1>Command</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ command.id }}</td>
            </tr>
            <tr>
                <th>Reference</th>
                <td>{{ command.Reference }}</td>
            </tr>
            <tr>
                <th>DateCommande</th>
                <td>{{ command.DateCommande ? command.DateCommande|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>DateExpedie</th>
                <td>{{ command.DateExpedie ? command.DateExpedie|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>DateRetour</th>
                <td>{{ command.DateRetour ? command.DateRetour|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_command_index') }}">back to list</a>

    <a href="{{ path('app_command_edit', {'id': command.id}) }}">edit</a>

    {{ include('command/_delete_form.html.twig') }}
{% endblock %}
